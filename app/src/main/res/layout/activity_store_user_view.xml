<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.exercises.ExerciseUserView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/StoreuserViewExTitle"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="102dp"
            android:layout_marginTop="57dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/title"
            android:textAlignment="center"
            android:textColor="@color/teal_200"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/StoreuserViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="315dp"
            android:layout_marginTop="614dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/sub_title"
            android:textAlignment="center"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="138dp"
            app:cardElevation="5dp">

            <ImageView
                android:id="@+id/StoreuserViewExImg"
                android:layout_width="340dp"
                android:layout_height="252dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/StoreUserViewExDes"
            android:layout_width="370dp"
            android:layout_height="165dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="147dp"
            android:background="@drawable/card_view_text"
            android:padding="10dp"
            android:text="@string/description" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="268dp"
            android:layout_marginBottom="91dp"
            android:text="@string/textView30" />

        <Button
            android:id="@+id/buyNow"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="16dp"
            android:layout_toStartOf="@+id/add_to_cart_user"
            android:backgroundTint="@color/lightGreen"
            android:text="@string/buyNow" />

        <Button
            android:id="@+id/add_to_cart_user"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/lightGreen"
            android:text="@string/add_to_cart_user" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>