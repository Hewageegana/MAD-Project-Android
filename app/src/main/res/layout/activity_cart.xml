<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="148dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="410dp"
        android:background="?android:attr/listDivider" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="101dp"
        android:layout_height="101dp"
        android:layout_alignBottom="@+id/divider"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="282dp"
        android:layout_marginBottom="15dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/item_topic"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/item_description"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="5dp"
        android:text="TextView"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_description"
        android:layout_width="159dp"
        android:layout_height="48dp"
        android:layout_above="@+id/item_price"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="0dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/item_price"
        android:layout_width="83dp"
        android:layout_height="29dp"
        android:layout_alignBottom="@+id/divider"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="187dp"
        android:layout_marginBottom="25dp"
        android:text="TextView" />

    <CheckBox
        android:id="@+id/cart_checkBoxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/divider"
        android:layout_alignBottom="@+id/divider"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginEnd="369dp"
        android:layout_marginBottom="115dp"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/remove_item"
        android:layout_width="79dp"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="16dp"
        android:background="@color/design_default_color_surface"
        app:srcCompat="@drawable/trashbig"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tot_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="34dp"
        android:text="@string/tot_price"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/display_subtot"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="34dp"
        android:layout_toEndOf="@+id/tot_price"
        android:text="TextView" />

    <Button
        android:id="@+id/go_checkout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="25dp"
        android:background="@color/lightGreen"
        android:text="@string/go_checkout_btn" />

</RelativeLayout>