<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.member.UpdateMember">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"
        android:text="@string/tv_name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginStart="205dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/borderstyle2"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="90dp"
        android:text="@string/tv_gender"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="205dp"
        android:layout_marginTop="90dp"
        android:checkedButton="@id/rdbtn_male">

        <RadioButton
            android:id="@+id/rdbtn_male"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:minHeight="48dp"
            android:text="@string/rdbtn_male"
            android:textColor="#00796B"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdbtn_female"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:minHeight="48dp"
            android:text="@string/rdbtn_female"
            android:textSize="18sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="163dp"
        android:text="@string/tv_age"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_age"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginStart="205dp"
        android:layout_marginTop="159dp"
        android:background="@drawable/borderstyle2"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="234dp"
        android:text="@string/tv_address"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_address"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="205dp"
        android:layout_marginLeft="206dp"
        android:layout_marginTop="223dp"
        android:background="@drawable/borderstyle2"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:inputType="textPostalAddress"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="310dp"
        android:text="@string/tv_phone"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginStart="205dp"
        android:layout_marginTop="299dp"
        android:background="@drawable/borderstyle2"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:inputType="phone"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="375dp"
        android:text="@string/tv_email"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginStart="205dp"
        android:layout_marginTop="363dp"
        android:background="@drawable/borderstyle2"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_nic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="430dp"
        android:text="@string/tv_nic"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_nic"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginStart="205dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/borderstyle2"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Spinner
        android:id="@+id/membership"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginStart="205dp"
        android:layout_marginTop="479dp"
        android:background="@android:drawable/btn_dropdown"
        android:gravity="center_horizontal|center_vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:spinnerMode="dropdown"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tv_membertype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="481dp"
        android:text="@string/tv_membertype"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="540dp"
        android:text="@string/tv_username"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="604dp"
        android:text="@string/tv_password"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="205dp"
        android:layout_marginLeft="202dp"
        android:layout_marginTop="593dp"
        android:background="@drawable/borderstyle2"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="205dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="535dp"
        android:background="@drawable/borderstyle2"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_marginLeft="133dp"
        android:layout_marginTop="2dp"
        android:text="@string/tv_username"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_updatemember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="655dp"
        android:background="@color/mad1"
        android:text="@string/btn_updatemember"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="655dp"
        android:layout_marginRight="90dp"
        android:background="@color/mad1"
        android:text="@string/btn_cancel"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />


</RelativeLayout>