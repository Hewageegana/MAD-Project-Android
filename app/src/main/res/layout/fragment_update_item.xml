<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/divider5"
        android:layout_width="382dp"
        android:layout_height="589dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.896"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        app:layout_constraintVertical_bias="0.514" />

    <TextView
        android:id="@+id/add_item_code"
        android:layout_width="91dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="64dp"
        android:text="@string/add_item_code"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/divider5"
        app:layout_constraintTop_toTopOf="@+id/divider5" />

    <EditText
        android:id="@+id/add_item_code_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/borderstyle"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/divider5"
        app:layout_constraintTop_toTopOf="@+id/divider5"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/add_item_title"
        android:layout_width="91dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="140dp"
        android:text="@string/add_item_title"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/divider5"
        app:layout_constraintTop_toTopOf="@+id/divider5" />

    <TextView
        android:id="@+id/add_item_description"
        android:layout_width="91dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="236dp"
        android:text="@string/add_item_description"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/divider5"
        app:layout_constraintTop_toTopOf="@+id/divider5" />

    <TextView
        android:id="@+id/add_item_price"
        android:layout_width="91dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="316dp"
        android:text="@string/add_item_price"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/divider5"
        app:layout_constraintTop_toTopOf="@+id/divider5" />

    <TextView
        android:id="@+id/add_item_image"
        android:layout_width="91dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="420dp"
        android:text="@string/add_item_image"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/divider5"
        app:layout_constraintTop_toTopOf="@+id/divider5" />

    <EditText
        android:id="@+id/add_item_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/borderstyle"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_item_code_txt"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/add_item_price_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/borderstyle"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_item_description_txt"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/add_item_description_txt"
        android:layout_width="207dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/borderstyle"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_item_title_txt"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/add_item_image_upload"
        android:layout_width="193dp"
        android:layout_height="115dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/update_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/update_item"
        android:layout_width="131dp"
        android:layout_height="48dp"
        android:layout_marginEnd="84dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="@string/update_item"
        app:layout_constraintBottom_toBottomOf="@+id/divider5"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>